<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.table.MainActivity" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp">  
         <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dp"  >

            <ImageButton
                android:id="@+id/imageButtonfrog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"             
                android:background="#FFFFFF"
                android:src="@drawable/frog" />
            
            <ImageButton
                android:id="@+id/imageButtoncow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/cow" 
                android:layout_marginLeft="1dp"/>
            
            <ImageButton
                android:id="@+id/imageButtondog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/dog" 
                android:layout_marginLeft="1dp"/>
            <ImageButton 
                android:id="@+id/imageButtonwoodpecker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/woodpecker"
                android:layout_marginLeft="1dp" />
            <ImageButton 
                android:id="@+id/imageButtontiger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/tiger"
                android:layout_marginLeft="1dp" />
            
        </TableRow>
        
        
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dp">
            
            <ImageButton
                android:id="@+id/imageButtonhorse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/horse" />
            
            <ImageButton
                android:id="@+id/imageButtonelephant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/elephant"
                android:layout_marginLeft="1dp" />
            
            <ImageButton
                android:id="@+id/imageButtonsheep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/sheep" 
                android:layout_marginLeft="1dp"/>
              <ImageButton 
                android:id="@+id/imageButtonpigeon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/pigeon"
                android:layout_marginLeft="1dp"/>
              <ImageButton 
                android:id="@+id/imageButtonpeacock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/peacock"
                android:layout_marginLeft="1dp" />

        </TableRow>

       

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            
             <ImageButton
                 android:id="@+id/imageButtondonkey"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#FFFFFF"
                 android:src="@drawable/donkey" />
            
            <ImageButton
                android:id="@+id/imageButtonduck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/duck" 
                android:layout_marginLeft="1dp" />
            
            <ImageButton
                android:id="@+id/imageButtonrooster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/rooster" 
                android:layout_marginLeft="1dp" />
             <ImageButton
                android:id="@+id/imageButtonparrot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/parrot"
                android:layout_marginLeft="1dp" />
             <ImageButton 
                android:id="@+id/imageButtonowl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/owl" 
                android:layout_marginLeft="1dp" />

        </TableRow>
        
          <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            
             <ImageButton
                 android:id="@+id/imageButtoncanary"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#FFFFFF"
                 android:src="@drawable/canary" />
            
            <ImageButton
                android:id="@+id/imageButtonfly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/fly"
                android:layout_marginLeft="1dp" />
            
            <ImageButton
                android:id="@+id/imageButtonwolf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/wolf"
                android:layout_marginLeft="1dp" />
            <ImageButton 
                android:id="@+id/imageButtonlion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/lion"
                android:layout_marginLeft="1dp" />
            <ImageButton 
                android:id="@+id/imageButtonlapwing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/lapwing"
                android:layout_marginLeft="1dp" />
                

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            
             <ImageButton
                 android:id="@+id/imageButtonsparrow"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#FFFFFF"
                 android:src="@drawable/sparrow" />
            
            <ImageButton
                android:id="@+id/imageButtoncrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/crow" 
                android:layout_marginLeft="1dp" />
            
            <ImageButton
                android:id="@+id/imageButtongoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/goose"
                android:layout_marginLeft="1dp" />
            <ImageButton
                android:id="@+id/imageButtoncat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/cat"
                android:layout_marginLeft="1dp" />
            <ImageButton
               android:id="@+id/imageButtonbee"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#FFFFFF"
               android:src="@drawable/bee"
               android:layout_marginLeft="1dp" /> 

        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
           
           <ImageButton
                android:id="@+id/imageButtonchick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/chick" />  
           
           <ImageButton 
               android:id="@+id/imageButtonbear"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#FFFFFF"
               android:src="@drawable/bear"
               android:layout_marginLeft="1dp" />
                         
           
        </TableRow>


            
    </TableLayout>

    <Button
        android:id="@+id/buttonabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:text="About Us" />

</RelativeLayout>
</ScrollView>