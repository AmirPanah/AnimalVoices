<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.table.MainActivity" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp">  
         <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dp"  >

            <ImageButton
                android:id="@+id/imageButtonfrog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"             
                android:background="#FFFFFF"
                android:src="@drawable/frogl" />
            
            <ImageButton
                android:id="@+id/imageButtoncow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/cowl" 
                android:layout_marginLeft="30dp"/>
            
            <ImageButton
                android:id="@+id/imageButtondog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/dogl" 
                android:layout_marginLeft="30dp"/>
            <ImageButton 
                android:id="@+id/imageButtonwoodpecker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/woodpeckerl"
                android:layout_marginLeft="30dp" />
            <ImageButton 
                android:id="@+id/imageButtonlion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/lionl"
                android:layout_marginLeft="30dp" />
            
        </TableRow>
        
        
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dp">
            
            <ImageButton
                android:id="@+id/imageButtonhorse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/horsel" />
            
            <ImageButton
                android:id="@+id/imageButtonelephant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/elephantl"
                android:layout_marginLeft="30dp" />
            
            <ImageButton
                android:id="@+id/imageButtonsheep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/sheepl" 
                android:layout_marginLeft="30dp"/>
            <ImageButton 
                android:id="@+id/imageButtontiger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/tigerl"
                android:layout_marginLeft="30dp" />
            <ImageButton 
                android:id="@+id/imageButtonlapwing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/lapwingl"
                android:layout_marginLeft="30dp" />

        </TableRow>

       

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
            
             <ImageButton
                 android:id="@+id/imageButtondonkey"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#FFFFFF"
                 android:src="@drawable/donkeyl" />
            
            <ImageButton
                android:id="@+id/imageButtonduck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/duckl" 
                android:layout_marginLeft="30dp" />
            
            <ImageButton
                android:id="@+id/imageButtonrooster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/roosterl" 
                android:layout_marginLeft="30dp" />
            <ImageButton 
                android:id="@+id/imageButtonpigeon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/pigeonl"
                android:layout_marginLeft="30dp"/>
             <ImageButton
                android:id="@+id/imageButtoncat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/catl"
                android:layout_marginLeft="30dp" />

        </TableRow>
        
          <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
            
             <ImageButton
                 android:id="@+id/imageButtoncanary"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#FFFFFF"
                 android:src="@drawable/canaryl" />
            
            <ImageButton
                android:id="@+id/imageButtonfly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/flyl"
                android:layout_marginLeft="30dp" />
            
            <ImageButton
                android:id="@+id/imageButtonwolf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/wolfl"
                android:layout_marginLeft="30dp" />
             <ImageButton 
                android:id="@+id/imageButtonpeacock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/peacockl"
                android:layout_marginLeft="30dp" />
              <ImageButton 
                android:id="@+id/imageButtonowl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/owll"
                android:layout_marginLeft="30dp" />  

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
            
             <ImageButton
                 android:id="@+id/imageButtonsparrow"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#FFFFFF"
                 android:src="@drawable/sparrowl" />
            
            <ImageButton
                android:id="@+id/imageButtoncrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/crowl" 
                android:layout_marginLeft="30dp" />
            
            <ImageButton
                android:id="@+id/imageButtongoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/goosel"
                android:layout_marginLeft="30dp" />
            <ImageButton
                android:id="@+id/imageButtonparrot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/parrotl"
                android:layout_marginLeft="30dp" />
            <ImageButton
               android:id="@+id/imageButtonbee"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#FFFFFF"
               android:src="@drawable/beel"
               android:layout_marginLeft="30dp" /> 

        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
           
           <ImageButton
                android:id="@+id/imageButtonchick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/chickl" />  
           
           <ImageButton 
               android:id="@+id/imageButtonbear"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#FFFFFF"
               android:src="@drawable/bearl"
               android:layout_marginLeft="30dp" />
           
                      
           
        </TableRow>

            
    </TableLayout>

    <Button
        android:id="@+id/buttonabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:text="About Us" />

</RelativeLayout>
</ScrollView>